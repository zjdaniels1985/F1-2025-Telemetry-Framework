<Window x:Class="F1TelemetryDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1TelemetryDashboard"
        mc:Ignorable="d"
        Title="F1 2025 Telemetry Dashboard" Height="900" Width="1400"
        MinHeight="600" MinWidth="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar: IP/Port -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock Text="Bind IP:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Width="150" Text="{Binding BindAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>
                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Width="80" Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Reconnect" Command="{Binding ReconnectCommand}" Margin="12,0,0,0" Padding="10,2"/>
                <TextBlock Text="{Binding ConnectionStatus}" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="LightGreen"/>
            </StackPanel>
        </DockPanel>

        <!-- Top: Race Order -->
        <GroupBox Header="Race Order" Grid.Row="1" Padding="8">
            <DataGrid ItemsSource="{Binding RaceOrder}" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column"
                      SelectionMode="Single" Margin="0,4,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Position}" Width="40"/>
                    <DataGridTextColumn Header="Driver" Binding="{Binding DriverShort}" Width="*"/>
                    <DataGridTextColumn Header="Car" Binding="{Binding CarIndex}" Width="60"/>
                    <DataGridTextColumn Header="Lap" Binding="{Binding Lap}" Width="60"/>
                    <DataGridTextColumn Header="Last Lap" Binding="{Binding LastLapTimeDisplay}" Width="120"/>
                    <DataGridTextColumn Header="Best Lap" Binding="{Binding BestLapTimeDisplay}" Width="120"/>
                    <DataGridTextColumn Header="Gap" Binding="{Binding GapToLeaderDisplay}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Middle: Fastest Lap Times -->
        <GroupBox Header="Fastest Laps (Top 5)" Grid.Row="2" Padding="8" Margin="0,10,0,10">
            <DataGrid ItemsSource="{Binding FastestLaps}" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="60"/>
                    <DataGridTextColumn Header="Driver" Binding="{Binding DriverShort}" Width="*"/>
                    <DataGridTextColumn Header="Lap" Binding="{Binding LapNumber}" Width="80"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding TimeDisplay}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Bottom: Track Map -->
        <GroupBox Header="Track Map (Top-Down)" Grid.Row="3" Padding="8">
            <Grid>
                <Viewbox Stretch="Uniform">
                    <Canvas Width="1200" Height="600" Background="#101018">
                        <ItemsControl ItemsSource="{Binding CarVisuals}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding CanvasX}" />
                                    <Setter Property="Canvas.Top" Value="{Binding CanvasY}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Ellipse Width="14" Height="14" Fill="{Binding DotBrush}" Stroke="White" StrokeThickness="1.2"/>
                                        <Border Background="#AA000000" Padding="2,0" CornerRadius="3" HorizontalAlignment="Left" Margin="10, -18, 0, 0">
                                            <TextBlock Text="{Binding Label}" Foreground="White" FontSize="12"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Viewbox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
